            }

            .projects-grid,
            .skills-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }

        /* Section targeting */
        section {
            scroll-margin-top: 70px;
        }
    </style>
